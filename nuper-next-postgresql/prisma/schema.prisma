generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(cuid())
  name             String?
  email            String    @unique
  emailVerified    DateTime?
  image            String?
  password         String?
  role             String    @default("USER")
  userRole         String?   // "INVESTOR" | "ENTREPRENEUR"
  profileImage     String?   // ImageBB URL
  isVerified       Boolean   @default(false)
  verificationData Json?     // Flexible field for verification details
  profileData      Json?     // Role-specific profile information
  socialLinks      Json?     // LinkedIn, Twitter, Instagram
  phone            String?   // For verification only
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  projects         Project[]
}

model Event {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String?
  content     Json?
  date        String?
  cardImage   String?
  published   Boolean  @default(true)
  isFeatured  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Bulletin {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String?
  publisher   String?
  content     Json?
  cardImage   String?
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      String   @default("SUBMITTED")
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
