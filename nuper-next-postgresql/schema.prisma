generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String?
  role          String    @default("USER")
  projects      Project[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Event {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String?
  content     String?
  date        String?
  location    String?
  organizer   String?
  cardImage   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Bulletin {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String?
  publisher   String?
  cardImage   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Project {
  id               String        @id @default(cuid())
  title            String
  content          String?
  status           String        @default("SUBMITTED")
  adminNotes       String?
  lastRevisionDate DateTime?
  submittedAt      DateTime      @default(now())
  ownerId          String
  owner            User          @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
}
